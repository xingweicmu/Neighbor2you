<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accepted_list"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:padding="5dip"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout android:id="@+id/accepted_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg"
        android:layout_marginRight="5dip">
        <ImageView
            android:id="@+id/accepted_list_image"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"

            android:src="@drawable/oil"

            />
    </LinearLayout>


    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/accepted_thumbnail"
        android:ellipsize="end"

        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginLeft="9dp"
        android:layout_centerInParent="true"
        android:id="@+id/posted_title"
        android:text="Sunflower Oil"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/background_floating_material_dark"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/edit_accepted_status"
        android:ellipsize="end"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginRight="9dp"
        android:layout_centerInParent="true"
        android:id="@+id/accepted_status"
        android:text="Status"
        android:textSize="22sp"

        android:textColor="@color/background_floating_material_dark"
        />
    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:textSize="19sp"
        android:layout_centerInParent="true"
        android:id="@+id/edit_accepted_status"
        android:entries="@array/status"/>

</RelativeLayout>


