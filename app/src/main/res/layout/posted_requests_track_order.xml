<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_blue"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:id="@+id/item1"
            android:layout_width="fill_parent"
            android:layout_height="135dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/default_photo"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"

                        android:text="Waiting"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/background_floating_material_dark"
                        android:layout_height="65dp"
                        android:id="@+id/track_order_buyer" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Acceptor"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:layout_height="30dp"
                        />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/item1"
            android:id="@+id/order_name"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
<ListView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/order_name"
    android:layout_marginTop="15dp"
    android:layout_marginRight="42dp"
    android:layout_marginLeft="42dp"
    android:id="@+id/status_list">

    </ListView>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:text="Make a Phone Call"
            android:layout_below="@id/status_list"
            style="@style/button_style"
            android:id="@+id/phone_call"
            android:elevation="6dp"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_below="@id/phone_call"
            android:text="Received"
            style="@style/button_style"
            android:elevation="6dp"
            android:id="@+id/receive_but"/>
    </RelativeLayout>


</ScrollView>
